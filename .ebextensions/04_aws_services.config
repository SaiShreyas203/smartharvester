# AWS Services Configuration for Elastic Beanstalk
# Set environment variables for AWS services (Cognito, DynamoDB, S3, SNS)

option_settings:
  aws:elasticbeanstalk:application:environment:
    # AWS Core
    AWS_REGION: "us-east-1"
    
    # Cognito (set these in EB Console with actual values)
    # COGNITO_USER_POOL_ID: "us-east-1_HGEM2vRNI"
    # COGNITO_REGION: "us-east-1"
    # COGNITO_DOMAIN: "smartcrop-rocky-app.auth.us-east-1.amazoncognito.com"
    # COGNITO_CLIENT_ID: "4l8j19f73h5hqmlldgc6jigk3k"
    # COGNITO_REDIRECT_URI: "https://your-eb-url.elasticbeanstalk.com/auth/callback/"
    
    # DynamoDB
    DYNAMO_USERS_TABLE: "users"
    DYNAMO_PLANTINGS_TABLE: "plantings"
    DYNAMO_USERS_PK: "username"
    DYNAMODB_USERS_TABLE_NAME: "users"
    DYNAMODB_PLANTINGS_TABLE_NAME: "plantings"
    
    # S3
    S3_BUCKET: "terratrack-media"
    AWS_STORAGE_BUCKET_NAME: "terratrack-media"
    AWS_S3_REGION_NAME: "us-east-1"
    
    # SNS
    SNS_TOPIC_ARN: "arn:aws:sns:us-east-1:518029233624:harvest-notifications"
    
    # Django
    DJANGO_SETTINGS_MODULE: "config.settings"
    IS_PRODUCTION: "True"
    USE_TLS: "True"
    
    # Note: Set these in EB Console Environment Properties:
    # - AWS_ACCESS_KEY_ID (or use IAM instance role)
    # - AWS_SECRET_ACCESS_KEY (or use IAM instance role)
    # - DJANGO_SECRET_KEY
    # - COGNITO_* variables (with actual values)
    # - DATABASE_URL (if using RDS)

